<head>
    <title>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="row flex-lg-nowrap">
        <div class="col-12 col-lg-auto mb-3" style="width: 200px;">
            <div class="card p-3">
                <div class="e-navlist e-navlist--active-bg">
                    <ul class="nav">
                        <li class="nav-item"><a class="nav-link px-2 active" href="#"><i
                                    class="fa fa-fw fa-bar-chart mr-1"></i><span>Overview</span></a></li>
                        <li class="nav-item"><a class="nav-link px-2"
                                href="https://www.bootdey.com/snippets/view/bs4-crud-users" target="__blank"><i
                                    class="fa fa-fw fa-th mr-1"></i><span>CRUD</span></a></li>
                        <li class="nav-item"><a class="nav-link px-2"
                                href="https://www.bootdey.com/snippets/view/bs4-edit-profile-page" target="__blank"><i
                                    class="fa fa-fw fa-cog mr-1"></i><span>Settings</span></a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="row">
                <div class="col mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="e-profile">
                                <div class="row">
                                    <div class="col-12 col-sm-auto mb-3">
                                        <div class="mx-auto" style="width: 140px;">
                                            <div class="d-flex justify-content-center align-items-center rounded"
                                                style="height: 140px; background-color: rgb(233, 236, 239);">
                                                <span
                                                    style="color: rgb(166, 168, 170); font: bold 8pt Arial;">140x140</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                                        <div class="text-center text-sm-left mb-2 mb-sm-0">
                                            <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">John Smith</h4>
                                            <div class="mt-2">
                                                <button class="btn btn-primary" type="button">
                                                    <i class="fa fa-fw fa-camera"></i>
                                                    <span>Change Photo</span>
                                                </button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <ul class="nav nav-tabs">
                                    <li class="nav-item"><a href="" class="active nav-link">Settings</a></li>
                                </ul>
                                <div class="tab-content pt-3">
                                    <div class="tab-pane active">
                                        <form class="form" novalidate="">
                                            <div class="row">
                                                <div class="col">
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="form-group">
                                                                <label>Full Name</label>
                                                                <input class="form-control" type="text" name="name"
                                                                    placeholder="John Smith" value="John Smith">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="form-group">
                                                                <label>Email</label>
                                                                <input class="form-control" type="text"
                                                                    placeholder="user@example.com">
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col d-flex justify-content-end">
                                                    <button class="btn btn-primary" type="submit">Save Changes</button>
                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-3 mb-3">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="px-xl-3">
                                <button class="btn btn-block btn-secondary">
                                    <i class="fa fa-sign-out"></i>
                                    <span>Logout</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title font-weight-bold">Support</h6>
                            <p class="card-text">Get fast, free help from our friendly assistants.</p>
                            <button type="button" class="btn btn-primary">Contact Us</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            <h2 class="h3 mb-4 page-title">Settings</h2>

            <h5 class="mb-0">카드 정보</h5>
            <table class="table border bg-white">
                <thead>
                    <tr>
                        <th>card_number</th>
                        <th>card_period</th>
                        <th>card_type</th>
                        <th>users_user_id</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < card_info.length+1; i++){ %>
                        <% if(i==card_info.length){ %>
                            <form action="/mypage/addCard" method="post">
                                <tr>
                                    <td>
                                        <input class="form-control" type="text" name="card_number" placeholder=""
                                            value="">
                                    </td>
                                    <td>
                                        <input class="form-control" type="text" name="card_period" placeholder=""
                                            value="">
                                    </td>
                                    <td>
                                        <input class="form-control" type="text" name="card_type" placeholder=""
                                            value="">
                                    </td>
                                    <td>
                                        <input class="form-control" type="text" name="users_user_id" placeholder=""
                                            value=<%=card_info[0].users_user_id%> readonly>
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-primary">추가</button>
                                    </td>
                                </tr>
                            </form>
                            <%} else {%>
                                <tr>
                                    <form method="post">
                                        <td>
                                            <input type="text" name="after_card_number"
                                                value="<%=card_info[i].card_number%>">
                                        </td>
                                        <td>
                                            <input type="text" name="card_period" value="<%=card_info[i].card_period%>">
                                        </td>
                                        <td>
                                            <input type="text" name="card_type" value="<%=card_info[i].card_type%>">
                                        </td>
                                        <td>
                                            <input class="form-control" type="text" name="users_user_id"
                                                value=<%=card_info[i].users_user_id%>
                                            readonly>
                                        </td>
                                        <td>
                                            <input type="submit" value="수정" class="btn btn-primary"
                                                onclick="javascript: form.action='../updateCard/<%=card_info[i].card_number%>?_method=PATCH';" />
                                        </td>
                                        <td>
                                            <input type="submit" value="삭제" class="btn btn-primary"
                                                onclick="javascript: form.action='../Card/<%=card_info[i].card_number%>?_method=DELETE';" />
                                        </td>
                                    </form>
                                </tr>
                                <% } %>
                                    <% } %>

                </tbody>
            </table>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            <h2 class="h3 mb-4 page-title">Settings</h2>

            <h5 class="mb-0">배송지 정보</h5>
            <table class="table border bg-white">
                <thead>
                    <tr>
                        <th>postnumber</th>
                        <th>basic_address</th>
                        <th>detail_address</th>
                        <th>users_user_id</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < dest_info.length+1; i++){ %>
                        <% if(i==dest_info.length){ %>
                            <form action="/mypage/addDest" method="post">
                                <tr>
                                    <td>
                                        <input class="form-control" type="text" name="postnumber" placeholder=""
                                            value="">
                                    </td>
                                    <td>
                                        <input class="form-control" type="text" name="basic_address" placeholder=""
                                            value="">
                                    </td>
                                    <td>
                                        <input class="form-control" type="text" name="detail_address" placeholder=""
                                            value="">
                                    </td>
                                    <td>
                                        <input class="form-control" type="text" name="users_user_id" placeholder=""
                                            value=<%=dest_info[0].users_user_id%> readonly>
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-primary">추가</button>
                                    </td>
                                </tr>
                            </form>
                            <%} else {%>
                                <tr>
                                    <form method="post">
                                        <td>
                                            <input type="text" name="after_postnumber"
                                                value="<%=dest_info[i].postnumber%>">
                                        </td>
                                        <td>
                                            <input type="text" name="basic_address"
                                                value="<%=dest_info[i].basic_address%>">
                                        </td>
                                        <td>
                                            <input type="text" name="detail_address"
                                                value="<%=dest_info[i].detail_address%>">
                                        </td>
                                        <td>
                                            <input class="form-control" type="users_user_id" name="users_user_id"
                                                value=<%=dest_info[i].users_user_id%>
                                            readonly>
                                        </td>
                                        <td>
                                            <input type="submit" value="수정" class="btn btn-primary"
                                                onclick="javascript: form.action='../updateDest/<%=dest_info[i].postnumber%>?_method=PATCH';" />
                                        </td>
                                        <td>
                                            <input type="submit" value="삭제" class="btn btn-primary"
                                                onclick="javascript: form.action='../deleteDest/<%=dest_info[i].postnumber%>?_method=DELETE';" />
                                        </td>
                                    </form>
                                </tr>
                                <% } %>
                                    <% } %>

                </tbody>
            </table>
        </div>
    </div>
</div>
</div>